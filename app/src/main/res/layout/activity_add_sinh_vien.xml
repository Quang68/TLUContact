<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_msvAddSV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mã SV"
                    android:inputType="text"
                    android:backgroundTint="#FF6200EE"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edit_nameAddSV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên sinh viên"
                    android:inputType="text"
                    android:backgroundTint="#FF6200EE"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edit_sdtAddSV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số điện thoại"
                    android:inputType="phone"
                    android:backgroundTint="#FF6200EE"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edit_emailAddSV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="#FF6200EE"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edit_addressAddSV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Địa chỉ"
                    android:inputType="text"
                    android:backgroundTint="#FF6200EE"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/edit_lopAddSV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lớp"
                    android:inputType="text"
                    android:backgroundTint="#FF6200EE"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_AddSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm sinh viên"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6200EE"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>
