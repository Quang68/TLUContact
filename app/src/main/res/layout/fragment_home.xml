<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <!-- Tiêu đề -->
    <ImageView
        android:id="@+id/imgLogoHOME"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtTitleHOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TLUContact"
        android:textColor="@color/gray"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <!-- Mô tả -->
    <TextView
        android:id="@+id/txtSubtitleHOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Danh bạ Đại học Thủy Lợi"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <!-- Khung chứa các nút -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/opinionHOME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="Chọn danh bạ"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Nút Đơn Vị -->
            <Button
                android:id="@+id/btnDonViHOME"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:drawableLeft="@drawable/office"
                android:drawablePadding="12dp"
                android:text="Danh bạ đơn vị"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Nút CBNV -->
            <Button
                android:id="@+id/btnCBNVHOME"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:drawableLeft="@drawable/people"
                android:drawablePadding="12dp"
                android:text="Danh bạ CBNV"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Nút Sinh viên -->
            <Button
                android:id="@+id/btnStudentDirectory"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:drawableLeft="@drawable/people"
                android:drawablePadding="12dp"
                android:text="Danh bạ Sinh viên"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
